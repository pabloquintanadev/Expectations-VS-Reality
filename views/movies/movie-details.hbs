<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title"><strong>{{movieInfo.title}}</strong> from <i>{{movieInfo.year}}</h5>
        <p class="card-text">{{movieInfo.videoDescription}}</p>
        <iframe width="560" height="315" src="{{movieInfo.linkEmbed}}" frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
</div>

<form action="/movies/{{movieInfo.imDbId}}/save" method="POST">
    <button class="btn btn-outline-danger btn-md px-3" type="submit">
        SAVE
    </button>
</form>

<form action="/movies/{{movieInfo.imDbId}}/unsave" method="POST">
    <button class="btn btn-outline-danger btn-md px-3" type="submit">
        UNSAVE
    </button>
</form>

