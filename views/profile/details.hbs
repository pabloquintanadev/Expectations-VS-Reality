<div class="container mt-5 ml-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="d-flex flex-row justify-content-center mb-3">
            <img class="rounded-circle profile-border" src="{{profileImage}}" style="width: 200px; height: 200px; object-fit: cover;"/>
            </div>
            <div class="d-flex flex-row justify-content-center">
            <p class="mb-0">Current likes: {{likesCounter}}</p>
            </div>
            <div class="d-flex flex-row justify-content-center">
            <p class="mb-0">Current role: {{role}}</p>
            </div>
            <div class="d-flex flex-row justify-content-center mt-0">
                <a class="btn green-btn px-3" href="/profile/user-shorts/{{id}}/">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                        <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                    </svg>
                </a>
            </div>
            <h3 class="mb-4 text-center">{{name}}'s profile</h3>
        </div>
    </div>
</div>


<form action="/messages/{{id}}/new-message" method="POST">
    <div>
        <h3>send a message to {{username}}</h3>
    </div>
    <div>
        <label for="textContent" class="form-label"></label>
        <textarea class="form-control" id="textContent" rows="3" name="textContent"></textarea>
    </div>


    {{#if errorMessage}}
    <div id="error">{{errorMessage}}</div>
    {{/if}}
    <div class="container d-flex flex-row-reverse">
        <button type="submit" class="btn green-btn btn-md px-3 py-0">Enviar mensaje</button>
    </div>
</form>