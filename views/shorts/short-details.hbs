<form action="/posts/shorts/{{shortInfo.id}}/new-post" method="POST">
  <div class="mb-3">
    <div class="mb-3">
      <label for="textContent" class="form-label"></label>
      <textarea class="form-control" id="textContent" rows="3" name="textContent"
        placeholder="Comment something or protect other users from spoilers"></textarea>
    </div>
    <input id="isShort" name="isShort" type="hidden" value="false">
    {{!-- <input id="type" name="type" type="hidden" value="COMMENT"> --}}

    {{#if errorMessage}}
    <div id="error">{{errorMessage}}</div>
    {{/if}}
    <div class="container">
      <div class="row">
        <div class="col-md-2">
          <button type="submit" class="btn btn-dark">Send Post</button>
        </div>
        <div class="col-md-8"></div>
        <div class="col-md-2">
          <input id="type" name="type" type="hidden" value="COMMENT">

        </div>
      </div>
    </div>
  </div>
</form>

