<div class="container">
    <div class="row justify-content-center">
        <div class="pl-5 pt-3 col-md-4 justify-content-center align-items">
            <h3>All shorts:</h3>
            <ul></ul>
            {{#each shorts}}
                <li class="d-flex flex-column align-items green-color">
                    <h5 class="card-title"><strong>{{title}}</strong> by <i>{{author}}</i></h5>
                    <p class="card-text">{{summary}}</p>
                    <div class="container d-flex flex-row justify-content-left">
                        <a href="/shorts/details/{{id}}/" class="btn green-btn btn-sm px-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-play-fill" viewBox="0 0 16 16">
                                <path
                                    d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z" />
                            </svg>
                        </a>
                        {{#if ./../isAdmin}}
                        <form action="/shorts/delete/{{id}}/" method="POST">
                            <button class="btn red-btn btn-sm px-4" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg>
                            </button>
                        </form>
                        {{/if}}
                    </div>
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>